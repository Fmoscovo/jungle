<tr>
  <td>
    <% if product.image? %>
      <%= image_tag product.image.tiny.url %>
    <% else %>
      No image available
    <% end %>
  </td>
  <td>
    <h4><%= product.name %></h4>
    <p><%= product.description %></p>
  </td>
  <td>
  <% if product.discounted_price < product.price %>
  <span class="discounted"><%= custom_number_to_currency(product.price) %></span>
  <span class="new-price"><%= custom_number_to_currency(product.discounted_price) %></span>
<% else %>
  <%= custom_number_to_currency(product.price) %>
<% end %>
  </td>
  <td>
    <div>
      <%= button_to remove_item_cart_path(product_id: product.id), class: 'btn btn-xs btn-danger', aria_label: 'Reduce quantity' do %>
        -
      <% end %>
      <%= quantity %>
      <%= button_to add_item_cart_path(product_id: product.id), class: 'btn btn-xs btn-success', aria_label: 'Increase quantity' do %>
        +
      <% end %>
    </div>
  </td>
  <td>
  <%= custom_number_to_currency(product.discounted_price * quantity) %>
  </td>
</tr>
